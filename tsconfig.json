{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "paths": {
      "&back/*": ["./src/*"],
      "&shared/*": ["./shared/*"]
    }
  },
  "include": ["src/**/*", "shared/**/*"],
  "exclude": ["node_modules/**/*"]
}
